&lt;form method=&quot;post&quot; action=&quot;{{ url }}&quot; class=&quot;contact-form&quot;&gt;
	&lt;fieldset&gt;
		&lt;div class=&quot;field field--break&quot;&gt;
			&lt;input type=&quot;text&quot; placeholder=&quot;Name&quot; /&gt;
		&lt;/div&gt;
		&lt;div class=&quot;field field--break&quot;&gt;
			&lt;input type=&quot;text&quot; placeholder=&quot;Enquiry title&quot; /&gt;
		&lt;/div&gt;
		&lt;div class=&quot;field field--break&quot;&gt;
			&lt;input type=&quot;email&quot; placeholder=&quot;Email address&quot; /&gt;
		&lt;/div&gt;
		&lt;div class=&quot;field field--break&quot;&gt;
			&lt;input type=&quot;text&quot; pattern=&quot;[0-9]*&quot; placeholder=&quot;Phone no.&quot; /&gt;
		&lt;/div&gt;
		&lt;div class=&quot;field-container&quot;&gt;
			&lt;textarea rows=&quot;7&quot; placeholder=&quot;Message&quot;&gt;&lt;/textarea&gt;
		&lt;/div&gt;
	&lt;/fieldset&gt;
	&lt;input type=&quot;submit&quot; value=&quot;Send&quot;&gt;
&lt;/form&gt;